{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "semi": 0,
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "space-before-function-paren": ["error", "never"]
    }
}
